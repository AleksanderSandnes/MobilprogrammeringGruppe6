<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupFragment">

    <TextView
        android:id="@+id/SignupOverskrift"
        style="@style/TextAppearance.MaterialComponents.Headline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrer deg"
        app:layout_constraintBottom_toTopOf="@+id/guideline8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline8"
        app:layout_constraintVertical_bias="0.5">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".SignupFragment">

            <EditText
                android:id="@+id/SignupGjentaPassordInput"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:autofillHints=""
                android:background="@drawable/custom_input"
                android:drawableLeft="@drawable/ic_password"
                android:drawablePadding="12dp"
                android:ems="10"
                android:hint="@string/gjentaPassord"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:padding="10dp"
                app:layout_constraintEnd_toEndOf="@+id/SignupOprettPassordInput"
                app:layout_constraintStart_toStartOf="@+id/SignupOprettPassordInput"
                app:layout_constraintTop_toBottomOf="@+id/SignupOprettPassordInput" />

            <EditText
                android:id="@+id/SignupOprettPassordInput"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:autofillHints=""
                android:background="@drawable/custom_input"
                android:drawableLeft="@drawable/ic_password"
                android:drawablePadding="12dp"
                android:ems="10"
                android:hint="@string/passord"
                android:inputType="textPassword"
                android:padding="10dp"
                app:layout_constraintEnd_toEndOf="@+id/SignupEmailInput"
                app:layout_constraintStart_toStartOf="@+id/SignupEmailInput"
                app:layout_constraintTop_toBottomOf="@+id/SignupEmailInput" />

            <EditText
                android:id="@+id/SignupEmailInput"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:autofillHints=""
                android:background="@drawable/custom_input"
                android:drawableLeft="@drawable/ic_email"
                android:drawablePadding="12dp"
                android:ems="10"
                android:hint="@string/opprettBrukerEmail"
                android:inputType="textEmailAddress"

                android:padding="10dp"
                app:layout_constraintEnd_toEndOf="@+id/BirthdayDate"
                app:layout_constraintStart_toStartOf="@+id/BirthdayDate"
                app:layout_constraintTop_toBottomOf="@+id/BirthdayDate" />


            <DatePicker
                android:id="@+id/BirthdayDate"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:calendarViewShown="false"
                android:datePickerMode="spinner"
                android:theme="@style/datepicker"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/SignupMobilnummerInput" />

            <EditText
                android:id="@+id/SignupMobilnummerInput"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:autofillHints=".AUTOFILL_HINT_PHONE_NUMBER"
                android:background="@drawable/custom_input"
                android:ems="10"
                android:hint="@string/PhoneNumberHint"
                android:imeOptions="actionDone"
                android:inputType="phone"
                android:padding="10dp"
                app:layout_constraintEnd_toEndOf="@+id/SignupNavnInput"
                app:layout_constraintStart_toStartOf="@+id/SignupNavnInput"
                app:layout_constraintTop_toBottomOf="@+id/SignupNavnInput" />

            <EditText
                android:id="@+id/SignupNavnInput"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:autofillHints=""
                android:background="@drawable/custom_input"
                android:ems="10"
                android:hint="@string/ola_nordmann"
                android:inputType="text"
                android:padding="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/SignupLogo" />

            <ImageView
                android:id="@+id/SignupLogo"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginTop="24dp"
                android:contentDescription="@string/profilBilde"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/ic_logo41" />

            <Button
                android:id="@+id/SignupRegistrerBruker"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="32dp"
                android:text="@string/registrer_bruker"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/SignupGjentaPassordInput" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>