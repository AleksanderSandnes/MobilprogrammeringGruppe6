<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilRedigerFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline4">

        <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".ProfilRedigerFragment">

            <ImageView
                android:id="@+id/profilbilde"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="24dp"
                android:contentDescription="@string/bildeinfo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@drawable/ic_launcher_background" />

            <EditText
                android:id="@+id/endreProfilNavn"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/custom_input"
                android:padding="10dp"
                android:autofillHints=""
                android:ems="10"
                android:hint="@string/endreProfilNavn"
                android:inputType="number"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profilNavn" />

            <EditText
                android:id="@+id/profilMobilnr"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/custom_input"
                android:padding="10dp"
                android:autofillHints=".AUTOFILL_HINT_PHONE_NUMBER"
                android:ems="10"
                android:hint="@string/PhoneNumberHint"
                android:inputType="phone"
                app:layout_constraintStart_toStartOf="@+id/endreProfilMobilnr"
                app:layout_constraintTop_toBottomOf="@+id/endreProfilMobilnr" />

            <DatePicker
                android:id="@+id/endreProfilBursdag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:calendarViewShown="false"
                android:datePickerMode="spinner"
                app:layout_constraintStart_toStartOf="@+id/Date"
                app:layout_constraintTop_toBottomOf="@+id/Date" />

            <EditText
                android:id="@+id/endreProfilEmail"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/custom_input"
                android:padding="10dp"
                android:autofillHints=""
                android:ems="10"
                android:hint="@string/endreProfilEmail"
                android:inputType="textEmailAddress"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/endreProfilEmailOverskrift" />

            <TextView
                android:id="@+id/profilNavn"
                style="@style/TextAppearance.MaterialComponents.Headline6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"

                android:text="@string/endreProfilNavn"
                app:layout_constraintStart_toStartOf="@+id/endreProfilNavn"
                app:layout_constraintTop_toBottomOf="@+id/profilbilde" />

            <TextView
                android:id="@+id/endreProfilMobilnr"
                style="@style/TextAppearance.MaterialComponents.Headline6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/mobilnummer"
                app:layout_constraintStart_toStartOf="@+id/endreProfilNavn"
                app:layout_constraintTop_toBottomOf="@+id/endreProfilNavn" />

            <TextView
                android:id="@+id/Date"
                style="@style/TextAppearance.MaterialComponents.Headline6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/foedselsdato"
                app:layout_constraintStart_toStartOf="@+id/profilMobilnr"
                app:layout_constraintTop_toBottomOf="@+id/profilMobilnr" />

            <TextView
                android:id="@+id/endreProfilEmailOverskrift"
                style="@style/TextAppearance.MaterialComponents.Headline6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/endreProfilEmail"
                app:layout_constraintStart_toStartOf="@+id/endreProfilBursdag"
                app:layout_constraintTop_toBottomOf="@+id/endreProfilBursdag" />

            <Button
                android:id="@+id/EndreProfilRedigerBtn"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginTop="24dp"
                android:text="Rediger profil"
                app:layout_constraintStart_toStartOf="@+id/endreProfilEmail"
                app:layout_constraintTop_toBottomOf="@+id/endreProfilEmail" />

            <Button
                android:id="@+id/EndreProfilAvbryt"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="32dp"
                android:text="@string/avbryt"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/EndreProfilRedigerBtn"
                app:layout_constraintTop_toBottomOf="@+id/EndreProfilRedigerBtn" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <TextView
        android:id="@+id/textView"
        style="@style/TextAppearance.MaterialComponents.Headline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rediger_profil"
        app:layout_constraintBottom_toTopOf="@+id/guideline4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
