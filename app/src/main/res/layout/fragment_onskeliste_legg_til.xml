<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OnskelisteLeggTilFragment">

    <Button
        android:id="@+id/lagOnskeliste"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="OPPRETT ØNSKELISTE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/wishlistName"
        app:layout_constraintStart_toStartOf="@+id/wishlistName"
        app:layout_constraintTop_toBottomOf="@+id/wishlistName" />

    <EditText
        android:id="@+id/wishlistName"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Ønskeliste navn"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/lagOnskeliste"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/giveNameToOnskelisteText" />

    <TextView
        android:id="@+id/giveNameToOnskelisteText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Gi navn til ønskelisten:"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/wishlistName"
        app:layout_constraintStart_toStartOf="@+id/wishlistName"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />


</androidx.constraintlayout.widget.ConstraintLayout>